{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "allowSyntheticDefaultImports":true,
    "moduleResolution":"node"
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}